<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card ">
                <div class="card-title text-center">
                    <h3>
                        <br>
                        AGREGAR SERVIDOR AL INVENTARIO
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/servers/add" method="POST">
                        <div class="form-control">
                            <h5>
                                Informacion de hardware:
                            </h5>
                            <div class="row">
                                <div class="col-3">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">ID Interno: </span>
                                        <input type="text" name="ser_id_interno" class="form-control" placeholder="000PT..."
                                            autofocus>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Serial: </span>
                                        <input type="text" name="ser_info_serial" class="form-control" placeholder="XXXXX...">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Marca: </span>
                                        <input type="text" name="ser_info_marca" class="form-control" placeholder="Lenovo...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Modelo: </span>
                                        <input type="text" name="ser_info_modelo" class="form-control"
                                            placeholder="ThinkPad T14 G1...">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Procesador: </span>
                                        <input type="text" name="ser_info_procesador_modelo" class="form-control"
                                            placeholder="Intel(R) Core(TM) I5-7200...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Velocidad: </span>
                                        <input type="text" name="ser_info_procesador_velocidad" class="form-control"
                                            placeholder="2.70 GHz...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Arquitectura: </span>
                                        <select name="ser_info_procesador_arquitectura" class="form-select form-control">
                                            <option value="x32">x32</option>
                                            <option value="x64" selected>x64</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Memoria RAM: </span>
                                        <input type="text" name="ser_info_memoria_tamano" class="form-control" placeholder="16 GB...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Tipo RAM: </span>
                                        <input type="text" name="ser_info_memoria_referencia" class="form-control" placeholder="DDR4...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Disco duro: </span>
                                        <input type="text" name="ser_info_disco_tamano" class="form-control" placeholder="500 GB...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Tipo de disco: </span>
                                        <select name="ser_info_disco_referencia" class="form-select form-control">
                                            <option value="SDD">SDD</option>
                                            <option value="HDD" selected>HDD</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">MAC Ethernet: </span>
                                        <input type="text" name="ser_info_mac_ethernet" class="form-control"
                                            placeholder="00:00:00:00:00:00">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">MAC WIFI: </span>
                                        <input type="text" name="ser_info_mac_wifi" class="form-control"
                                            placeholder="00:00:00:00:00:00">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">Observaciones: </span>
                                    <div class="col">
                                        <textarea name="ser_info_observaciones" rows="2" class="form-control"
                                            placeholder="Desgaste por uso, etc..."></textarea>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <br>
                        <div class="form-control">
                            <h5>
                                Dispositivos adicionales:
                            </h5>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Mouse: </span>
                                        <select name="ser_adicional_mouse" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">PadMouse: </span>
                                        <select name="ser_adicional_padmouse" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Teclado: </span>
                                        <select name="ser_adicional_teclado" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Base Refrigerante: </span>
                                        <select name="ser_adicional_base_refrigerante" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Guaya: </span>
                                        <select name="ser_adicional_guaya" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Clave guaya: </span>
                                        <input type="text" name="ser_adicional_clave_guaya" class="form-control" placeholder="0000...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Pantalla: </span>
                                        <select name="ser_adicional_pantalla" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Ethernet-USB: </span>
                                        <select name="ser_adicional_adaptador_usb_eth" class="form-select form-control">
                                            <option value="SI">SI</option>
                                            <option value="NO" selected>NO</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Observaciones: </span>
                                        <textarea name="ser_adicional_observaciones_dispositivos" rows="2" class="form-control"
                                            placeholder="Mouse inalambrico, etc..."></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="form-control">
                            <h5>
                                Informacion de software:
                            </h5>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Sistema Operativo: </span>
                                        <input type="text" name="ser_sw_sistema_operativo" class="form-control"
                                            placeholder="Windows - Linux...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">OS Version: </span>
                                        <input type="text" name="ser_sw_version_so" class="form-control"
                                            placeholder="Vista, 10, Centos...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">OS Edition: </span>
                                        <input type="text" name="ser_sw_edicion_so" class="form-control"
                                            placeholder="SL, Pro, Lite...">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">OS Product ID: </span>
                                        <input type="text" name="ser_sw_product_id" class="form-control"
                                            placeholder="XXXXX-XXXXX-XXXXX-AAOEM...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">OS Key product: </span>
                                        <input type="text" name="ser_sw_product_key" class="form-control"
                                            placeholder="XXXXX-XXXXX-XXXXX-XXXXX-XXXXX...">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Ruta archivo regedit: </span>
                                        <input type="url" name="ser_sw_ruta_info" class="form-control" placeholder="http://...">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="form-control">
                            <h5>
                                Informacion Soporte Remoto:
                            </h5>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">ID AnyDesk: </span>
                                        <input type="text" name="ser_soporte_remoto_id" class="form-control"
                                            placeholder="XXX XXX XXX...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Clave AnyDesk: </span>
                                        <input type="text" name="ser_soporte_remoto_clave" class="form-control"
                                            placeholder="Db830039811XXX*...">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="form-control">
                            <h5>
                                Informacion administrativa:
                            </h5>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Proveedor: </span>
                                        <input type="text" name="ser_administrativa_vendedor" class="form-control" placeholder="Nephix...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Fecha de compra: </span>
                                        <input type="date" name="ser_administrativa_fecha_compra" class="form-control" id="start"
                                            name="trip-start" min="2000-01-01" max="2100-12-31">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Valor del equipo: </span>
                                        <input type="text" name="ser_administrativa_costo" class="form-control"
                                            placeholder="$2'500.000...">
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Tiempo de garantia: </span>
                                        <input type="text" name="ser_administrativa_garantia" class="form-control" placeholder="3 Años...">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="form-group text-center">
                            <button class="btn btn-success btn-block">
                                GUARDAR SERVIDOR
                            </button>
                            <a href="/servers" class="btn btn-secondary btn-block">
                                CANCELAR
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>