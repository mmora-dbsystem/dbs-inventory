{{!Formulario para registrar usuario}}
<div class="container p-4">
    {{!Creamos una fila}}
    <div class="row">
        {{! Creamos una columna}}
        <div class="col-md-4 mx-auto">
            {{!}}
            <div class="card text-center">
                {{!Creamos una tarjeta}}
                <div class="card-header">
                    {{!}}
                    <h3>
                        REGISTRO DE USUARIO
                    </h3>
                </div>
                {{!}}
                <div class="card-body">
                    {{!}}
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" name="usu_nom" placeholder="Digita tu nombre" class="form-control"
                                autofocus>
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="text" name="usu_ape" placeholder="Digita tus apellidos" class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="email" name="usu_cor" placeholder="Digita tu correo@db-system.com"
                                class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="password" name="usu_cla" placeholder="Digita tu contraseÃ±a"
                                class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        {{!Boton para registrar}}
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>