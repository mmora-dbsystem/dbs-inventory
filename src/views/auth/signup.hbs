{{!Formulario para registrar usuario}}
<div class="container p-4">
    {{!Creamos una fila}}
    <div class="row">
        {{! Creamos una columna}}
        <div class="col-md-4 mx-auto">
            {{!}}
            <div class="card text-center">
                {{!Creamos una tarjeta}}
                <div class="card-header">
                    {{!}}
                    <h3>
                        REGISTRO DE USUARIO
                    </h3>
                </div>
                {{!}}
                <div class="card-body">
                    {{!}}
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <input type="text" name="usu_nombres" placeholder="Digita tu nombre" class="form-control"
                                autofocus>
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="text" name="usu_apellidos" placeholder="Digita tus apellidos" class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="email" name="usu_correo_personal" placeholder="Digita tu correo personal"
                                class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="email" name="usu_correo_corporativo" placeholder="Digita tu correo@db-system.com"
                                class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group">
                            <input type="password" name="usu_clave" placeholder="Digita tu contraseÃ±a"
                                class="form-control">
                        </div>
                        {{!Espacio}}
                        <br>
                        <div class="form-group text-start">
                            <div>
                                <label class="">Rol</label>
                            </div>
                            <select name="usu_tipo_usuario" class="form-select form-control">
                                <option value="Administrador">Administrador</option>
                                <option value="Operador">Operador</option>
                                <option value="Consultor" selected>Consultor</option>
                            </select>
                        </div>
                        {{!Espacio}}
                        <br>
                        {{!Boton para registrar}}
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>