<div class="containet p-3">
    <div class="row">
        <div class="col d-grid gap-2 col-2 mx-auto">
            <a href="/desktops/add" class="btn btn-success">
                Agregar PC
            </a>
        </div>
        <p>
        </p>
        {{#each desktopsHW}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2>
                        <a href="/desktops/info/{{esc_id_interno}}">
                            <div class="card-tittle text-uppercase">
                                {{esc_id_interno}}
                            </div>
                        </a>
                    </h2>
                    <p class="m-2">
                    <h3>
                        <b>{{esc_info_estado}}</b>
                        <font color="blue"><i><u>{{esc_asignacion_correo_corporativo}}</u></i></font>
                    </h3>
                    <br>
                    <div class="carousel">
                        <div id="carousel-{{esc_id_interno}}" class="carousel carousel-dark slide"
                            data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active" data-bs-interval="10000">
                                    <img style="height:100px; width: 120px;" src="{{esc_info_ruta_imagen}}\0.jpg"
                                        class="rounded mx-autod-block" height: alt="...">
                                    <br>
                                    <br>
                                </div>
                                <div class="carousel-item" data-bs-interval="2000">
                                    <img style="height:100px; width: 120px;" src="{{esc_info_ruta_imagen}}\1.jpg"
                                        class="rounded mx-autod-block" alt="...">
                                    <br>
                                    <br>
                                </div>
                                <div class="carousel-item">
                                    <img style="height:100px; width: 120px;" src="{{esc_info_ruta_imagen}}\2.jpg"
                                        class="rounded mx-autod-block" alt="...">
                                    <br>
                                    <br>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carousel-{{esc_id_interno}}" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carousel-{{esc_id_interno}}" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <br>
                    <i>{{esc_info_marca}} - {{esc_info_modelo}}</i>
                    <br>
                    {{esc_info_serial}}
                    <br>
                    {{esc_info_procesador_modelo}} "{{esc_info_procesador_velocidad}}" -
                    {{esc_info_procesador_arquitectura}}
                    <br>
                    {{esc_info_memoria_referencia}} - {{esc_info_memoria_tamano}} // {{esc_info_disco_referencia}} -
                    {{esc_info_disco_tamano}}
                    <br>
                    <br>
                    <a href="/desktops/edit/{{esc_id_interno}}" class="btn btn-warning">
                        Editar
                    </a>
                    <a href="/desktops/delete/{{esc_id}}" class="btn btn-danger">
                        Eliminar
                    </a>
                   
                    <a href="/desktops/assign/{{esc_id_interno}}" class="btn btn-success">
                        Gestionar
                    </a>
                   
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md4 p-3">
            <div class="card card-body d-grid gap-2 col-6 mx-auto text-center">
                <p>
                    No existen software base para este equipo, por favor agrega uno.
                </p>
            </div>
        </div>
        {{/each}}
    </div>

</div>