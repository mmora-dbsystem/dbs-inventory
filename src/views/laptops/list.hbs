{{!Creamos un contenedor para nuestro portatil}}
<div class="containet p-3">
    <div class="row">
        <div class="col d-grid gap-2 col-2 mx-auto">
            <a href="/laptops/add" class="btn btn-success">
                Agregar portatil
            </a>
        </div>
        <div class="col d-grid gap-2 col-2 mx-auto">
            <a href="/laptops/browser/{{por_id_interno}}" class="btn btn-secondary">
                Buscar portatil asignado
            </a>
        </div>
        <p>
        </p>
        {{#each laptopsHW}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2>
                        <a href="/laptops/info/{{por_id_interno}}">
                            <div class="card-tittle text-uppercase">
                                {{por_id_interno}}
                            </div>
                        </a>
                    </h2>
                    <p class="m-2">
                    <h3>
                        <b>{{por_info_estado}}</b> 
                        <font color="blue"><i><u>{{por_asignacion_correo_corporativo}}</u></i></font>
                    </h3>
                    <br>
                    <div class="carousel">
                        <div id="carousel-{{por_id_interno}}" class="carousel carousel-dark slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active" data-bs-interval="10000">
                                    <img style="height:100px; width: 120px;" src="{{por_info_ruta_imagen}}\0.jpg"
                                        class="rounded mx-autod-block" height: alt="...">
                                    <br>
                                    <br>
                                </div>
                                <div class="carousel-item" data-bs-interval="2000">
                                    <img style="height:100px; width: 120px;" src="{{por_info_ruta_imagen}}\1.jpg"
                                        class="rounded mx-autod-block" alt="...">
                                    <br>
                                    <br>
                                </div>
                                <div class="carousel-item">
                                    <img style="height:100px; width: 120px;" src="{{por_info_ruta_imagen}}\2.jpg"
                                        class="rounded mx-autod-block" alt="...">
                                    <br>
                                    <br>
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{por_id_interno}}"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-{{por_id_interno}}"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <br>
                    <i>{{por_info_marca}} - {{por_info_modelo}}</i>
                    <br>
                    {{por_info_serial}}
                    <br>
                    {{por_info_procesador_modelo}} "{{por_info_procesador_velocidad}}" - {{por_info_procesador_arquitectura}}
                    <br>
                    {{por_info_memoria_referencia}} - {{por_info_memoria_tamano}} // {{por_info_disco_referencia}} - {{por_info_disco_tamano}}
                    <br>
                    <br>
                    <a href="/laptops/edit/{{por_id_interno}}" class="btn btn-warning">
                        Editar
                    </a>
                    <a href="/laptops/delete/{{por_id}}" class="btn btn-danger">
                        Eliminar
                    </a>
                    <a href="/laptops/assign/{{por_id_interno}}" class="btn btn-success">
                        Asignar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md4 p-3">
            <div class="card card-body d-grid gap-2 col-6 mx-auto text-center">
                <p>
                    No existen software base para este equipo, por favor agrega uno.
                </p>
            </div>
        </div>
        {{/each}}
    </div>

</div>